{
	"name": "pandapi",
	"description": "信息查询与分享平台 API",  
	"main": "src/index.ts",
	"cloudflare": {
		"label": "Backend OpenAPI Template",
		"products": [
			"Workers",
			"D1"
		],
		"categories": [
			"storage"
		],
		"docs_url": "https://chanfana.com",
		"preview_icon_url": "https://imagedelivery.net/wSMYJvS3Xw-n339CbDyDIA/1b2805d9-e7fb-4576-5176-6b409e251800/public",
		"preview_image_url": "https://imagedelivery.net/wSMYJvS3Xw-n339CbDyDIA/cbde46cf-20fa-4548-7f70-1ae8c2f48900/preview",
		"publish": true
	},
	"dependencies": {
		"@hono/zod-openapi": "^0.16.0",
		"@hono/zod-validator": "^0.4.0",
		"bcryptjs": "^2.4.3",
		"chanfana": "2.8.3",
		"hono": "4.11.1",
		"zod": "3.25.67"
	},
	"devDependencies": {   
		 "@cloudflare/workers-types": "^4.20231218.0",
		 "@types/bcryptjs": "^2.4.6",
		 "@typescript-eslint/eslint-plugin": "^6.15.0",
		 "@typescript-eslint/parser": "^6.15.0",
		 "esbuild": "^0.19.11",
		 "eslint": "^8.56.0",
		 "prettier": "^3.1.1",
		 "@cloudflare/vitest-pool-workers": "0.10.11",
		 "@types/node": "24.10.1",
		 "typescript": "5.9.3",
		 "vitest": "3.2.4",
		 "wrangler": "4.56.0"
	},
	"private": true,
	"scripts": {
		"cf-typegen": "wrangler types",
		"deploy": "wrangler deploy",
		"dev": "pnpm seedLocalDb && wrangler dev",
		"predeploy": "wrangler d1 migrations apply DB --remote",
		"schema": "npx chanfana",
		"seedLocalDb": "wrangler d1 migrations apply DB --local",
		"test": "wrangler deploy --dry-run && npx vitest run --config tests/vitest.config.mts",	
		"build": "esbuild src/index.ts --bundle --outfile=dist/index.js --platform=node --target=node18",
		"db:create": "wrangler d1 create panda-db",
		"db:init": "wrangler d1 execute panda-db --file=schema.sql",
		"db:seed": "wrangler d1 execute panda-db --file=seed.sql",
		"db:backup": "wrangler d1 export panda-db --output=backup.sql",
		"db:restore": "wrangler d1 import panda-db backup.sql",
   		"lint": "eslint src --ext .ts",
		"lint:fix": "eslint src --ext .ts --fix",	
		"test:coverage": "vitest --coverage",
		"format": "prettier --write \"src/**/*.ts\"",
		"type-check": "tsc --noEmit"

	}
}
